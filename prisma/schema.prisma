// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  proviewFeatures = ["selectRelationCount", "fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(uuid())
  name     String
  email    String     @unique
  password String
  History  History[]
  Favorite Favorite[]
}

model Word {
  id       String     @id @default(uuid())
  word     String
  History  History[]
  Favorite Favorite[]
}

model History {
  id     String   @id @default(uuid())
  added  DateTime @default(now())
  work   Word     @relation(fields: [wordId], references: [id])
  wordId String
  user   User     @relation(fields: [userId], references: [id])
  userId String
}

model Favorite {
  id     String   @id @default(uuid())
  added  DateTime @default(now())
  work   Word     @relation(fields: [wordId], references: [id])
  wordId String
  user   User     @relation(fields: [userId], references: [id])
  userId String
}
